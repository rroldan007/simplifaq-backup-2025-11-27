# SimpliFaq Production Configuration for Docker
NODE_ENV=production
PORT=3000

# Database (PostgreSQL production in Docker)
DATABASE_URL=postgresql://${POSTGRES_USER:-simplifaq_user}:${POSTGRES_PASSWORD}@postgres:5432/simplifaq_prod?schema=public

# Redis (using Docker container)
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# JWT
JWT_SECRET=${JWT_SECRET:-test_jwt_secret_key_2024_very_secure_32_plus_chars}
JWT_EXPIRES_IN=7d

# Encryption (for sensitive data like SMTP passwords)
ENCRYPTION_KEY=${ENCRYPTION_KEY:-simplifaq_encryption_key_2024_very_secure_32_chars_minimum}

# SMTP - Infomaniak Configuration
SMTP_HOST=${SMTP_HOST:-mail.infomaniak.com}
SMTP_PORT=${SMTP_PORT:-587}
SMTP_SECURE=false
SMTP_USER=${SMTP_USER:-contact@simplifaq.ch}
SMTP_PASS=${SMTP_PASS:-your_smtp_password_here}
EMAIL_FROM=${EMAIL_FROM:-contact@simplifaq.ch}

# Swiss Configuration
SWISS_QR_BILL_ENABLED=true
SWISS_TVA_RATES_STANDARD=0.081
SWISS_TVA_RATES_REDUCED=0.026
SWISS_TVA_RATES_SPECIAL=0.038

# Security
CORS_ORIGIN=${CORS_ORIGIN:-https://app.simplifaq.ch}
FRONTEND_URL=${FRONTEND_URL:-https://app.simplifaq.ch}
RATE_LIMIT_WINDOW=${RATE_LIMIT_WINDOW:-900000}
RATE_LIMIT_MAX=${RATE_LIMIT_MAX:-100}

# File Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf

# Logging
LOG_LEVEL=${LOG_LEVEL:-info}

# Stripe Configuration
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY:-sk_test_your_stripe_secret_key_here}
STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY:-pk_test_your_stripe_publishable_key_here}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET:-whsec_your_webhook_secret_here}

# Asistente ADM (AI Assistant)
ASISTENTE_BASE_URL=${ASISTENTE_BASE_URL:-http://ai.simplifaq.cloud}
ASISTENTE_API_KEY=${ASISTENTE_API_KEY:-b262af66687adf2b6ee10c80519874f2c9ad055507a53aefdd75238785a5bb4a}
ASISTENTE_TIMEOUT_MS=${ASISTENTE_TIMEOUT_MS:-30000}
