{
  "name": "simplifaq-backend",
  "version": "1.0.0",
  "description": "SimpliFaq Backend API",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && cp -r src/assets dist/assets && mkdir -p dist/templates/themes",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.dev.ts",
    "dev:fast": "nodemon --exec ts-node --transpile-only src/index.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "db:generate": "prisma generate --schema=./prisma/schema.dev.prisma",
    "db:push": "prisma db push --schema=./prisma/schema.dev.prisma",
    "db:migrate": "prisma migrate dev --schema=./prisma/schema.dev.prisma",
    "db:reset": "prisma migrate reset --schema=./prisma/schema.dev.prisma",
    "db:seed": "ts-node scripts/setup-db.ts",
    "db:studio": "prisma studio --schema=./prisma/schema.dev.prisma",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "worker:recurring": "ts-node src/scripts/recurring-invoices.ts",
    "check:user": "ts-node src/scripts/checkUserLogo.ts",
    "backup:create": "ts-node scripts/auto-backup.ts",
    "backup:restore": "ts-node scripts/restore-backup.ts",
    "backup:setup": "chmod +x ../scripts/setup-backup-cron.sh && ../scripts/setup-backup-cron.sh",
    "backup:list": "ls -la backups/",
    "backup:quick": "./scripts/backup-db.sh",
    "seed": "ts-node prisma/seed.ts",
    "demo:user": "node scripts/create-demo-user.js",
    "verify:api": "node ../scripts/verify-api-format.js"
  },
  "keywords": [
    "invoicing",
    "swiss",
    "qr-bill",
    "saas"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "@types/multer": "^2.0.0",
    "@types/nodemailer": "^6.4.17",
    "@types/qrcode": "^1.5.5",
    "@types/stripe": "^8.0.417",
    "archiver": "^7.0.1",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.62.0",
    "canvas": "^3.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.1",
    "express-slow-down": "^2.1.0",
    "express-validator": "^7.2.1",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "iban": "^0.0.14",
    "ioredis": "^5.8.2",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.5",
    "pdfjs-dist": "^5.4.394",
    "pdfkit": "^0.17.1",
    "prisma": "^6.12.0",
    "puppeteer": "^24.15.0",
    "qrcode": "^1.5.4",
    "speakeasy": "^2.0.0",
    "stripe": "^18.4.0",
    "svg-to-pdfkit": "^0.1.8",
    "swissqrbill": "^4.2.0",
    "tesseract.js": "^6.0.1",
    "undici": "^7.16.0",
    "winston": "^3.18.3",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@types/archiver": "^7.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/iban": "^0.0.35",
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.5.2",
    "@types/pdfkit": "^0.17.2",
    "@types/speakeasy": "^2.0.10",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "inquirer": "^9.3.8",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.8.3"
  }
}
