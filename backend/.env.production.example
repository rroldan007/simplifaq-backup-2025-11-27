# ðŸ‡¨ðŸ‡­ SimpliFaq - Production Environment Configuration
# Copy this file to .env.production and fill in your production values

# ===== DATABASE CONFIGURATION =====
DATABASE_URL="postgresql://username:password@localhost:5432/simplifaq_prod?schema=public"
DATABASE_POOL_SIZE=20
DATABASE_TIMEOUT=30000

# ===== SECURITY CONFIGURATION =====
JWT_SECRET="your-super-secure-jwt-secret-min-32-chars"
JWT_EXPIRES_IN="24h"
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===== SERVER CONFIGURATION =====
NODE_ENV="production"
PORT=3000
HOST="0.0.0.0"
CORS_ORIGIN="https://yourdomain.com,https://www.yourdomain.com"
TRUST_PROXY=true

# ===== SWISS CONFIGURATION =====
DEFAULT_CURRENCY="CHF"
DEFAULT_LANGUAGE="fr"
DEFAULT_TIMEZONE="Europe/Zurich"
COMPANY_COUNTRY="CH"

# Swiss TVA Rates (Geneva 2024)
SWISS_TVA_RATES_STANDARD=0.081
SWISS_TVA_RATES_REDUCED=0.026
SWISS_TVA_RATES_SPECIAL=0.038

# ===== EMAIL CONFIGURATION =====
SMTP_HOST="smtp.your-provider.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@yourdomain.com"
SMTP_PASS="your-email-password"
SMTP_FROM_NAME="Your Company Name"
SMTP_FROM_EMAIL="noreply@yourdomain.com"

# ===== FILE STORAGE =====
FILE_STORAGE_TYPE="s3"
AWS_REGION="eu-central-1"
AWS_S3_BUCKET="simplifaq-production"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"

# ===== LOGGING =====
LOG_LEVEL="info"
LOG_FORMAT="json"
LOG_FILE_PATH="/var/log/simplifaq/app.log"
LOG_MAX_SIZE="10m"
LOG_MAX_FILES="5"

# ===== MONITORING =====
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
HEALTH_CHECK_ENDPOINT="/health"
METRICS_ENDPOINT="/metrics"

# ===== BACKUP =====
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET="simplifaq-backups"

# ===== SWISS QR BILL =====
QR_BILL_FONT_PATH="/app/fonts/LiberationSans-Regular.ttf"
PDF_TEMP_DIR="/tmp/pdfs"
PDF_CLEANUP_INTERVAL="3600000"

# ===== REDIS (for sessions and caching) =====
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD="your-redis-password"
SESSION_SECRET="your-session-secret-min-32-chars"
SESSION_MAX_AGE=86400000

# ===== SSL/TLS =====
SSL_CERT_PATH="/etc/ssl/certs/yourdomain.crt"
SSL_KEY_PATH="/etc/ssl/private/yourdomain.key"
FORCE_HTTPS=true

# ===== FEATURE FLAGS =====
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_API_RATE_LIMITING=true